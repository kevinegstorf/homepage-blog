<div id="post_show_content"class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date"><%= @post.created_at %></p>
    <h1><%= @post.title %></h1>
    <hr>
    <div id="content">
      <p>

        <%= @post.content %>
      </p>
    </div>

    <hr>
  </div>
    <div class="share-box">
      <p>Share <%= @post.title %></p>
      <a href="#"><li class="fa fa-twitter"></li></a>
      <a href="#"> <li class="fa fa-facebook"></li></a>
      <a href="#"><li class="fa fa-google-plus"></li></a>
    </div>


    <br>
    <br>

    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are your
      sure you want to delete this post?'} %>
      <hr>
  </header>
