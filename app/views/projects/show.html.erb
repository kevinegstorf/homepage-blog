<div id="post_show_content"class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date"><%= @project.created_at.strftime("%A, %B %d %Y") %></p>
    <h1><%= @project.title %></h1>
    <hr>
    <div id="content">
           <div class="post-text">

                    <%= markdown @project.description %>
                    <div class="button_wrapper ">

                      <a href="<%= @project.link %>" class="project_button" target="_blank" style="color: white;">Visit <%=@project.title%></a>
                    </div>
           </div>
    </div>

    <hr>
    <% if user_signed_in? %>
    <div class="admin_links">
      <%= link_to "Edit Article", edit_project_path(@project) %>
      <%= link_to "Delete Article", project_path(@project), method: :delete, data: { confirm: 'Are you sure?'} %>
    </div>
    <% end %>
  </header>
