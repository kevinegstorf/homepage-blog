<h1 id="page_title">Say Hello!</h1>
<div class="skinny-wrapper wrapper-padding">
  <%= form_for @contact do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <br>

  <%= f.label :email %>
  <%= f.text_field :email, required: true %>

  <br>

  <%= f.label :message %>
  <%= f.text_area :message, required: true %>

  <div class="hidden">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, hint: 'leave blank' %>

  </div>

  <%= f.submit 'Send Message', class: 'button'%>
  <% end %>
